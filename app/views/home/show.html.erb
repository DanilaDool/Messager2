<% if current_user %>
<!DOCTYPE html>
  <html>
  <body>

  <div class="header">
    <div class="search-bar">
      <input type="text" placeholder="Найти друга">
    </div>
  </div>

  <div class="chat-list">
    <% current_user.friends.each do |friend| %>
      <div class="chat">
        <img src="<%= friend.avatar_url %>" alt="<%= friend.name %>" class="rounded-avatar" height="100px" width="100px">
        <div class="chat-info">
          <h3><%= friend.name %></h3>
          <p>Последнее сообщение в чате</p>
        </div>
      </div>
    <% end %>
  </div>
  </body>
  </html>

<% else %>
  <div class="nocurrent">
    <div class="text-center">
      <h3 class="my-auto">Вы не зарегистрированы</h3>
    </div>
  </div>
<% end %>
