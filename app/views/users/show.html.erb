<%if current_user %>
<!DOCTYPE html>
<html>
<body>

<main>
  <section class="user-profile">
    <% if current_user.present? && current_user.avatar.present? %>
      <%= image_tag current_user.avatar.url, alt: "Ваш аватар" %>
    <% else %>
      <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRCSiylwVA6PW_GnlrPL-UmN7zPcmtnzPqXSVExvXbpPQ&s" alt="заглушка">
    <% end %>
    <h1><%= current_user.name %></h1>
    <p><%= current_user.descriptions %></p>
    <p>Друзья: <%= current_user.friends.count %></p>
    <%= link_to 'Редактировать профиль', edit_user_path(current_user), class: 'btn' %>
  </section>
</main>

</body>
</html>
<%end %>